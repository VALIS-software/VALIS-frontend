{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "downlevelIteration": true,
        "lib": [
            "es2015",
            "DOM",
            "ScriptHost"
        ],
        "noImplicitAny": true,
        "strictNullChecks": false,
        "allowJs": true,

        // module resolution paths
        "baseUrl": ".",
        "paths": {
            "*": [
                "*",
                "lib/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}